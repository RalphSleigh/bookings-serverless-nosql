{
    "compilerOptions": {
      "lib": ["es2022", "dom"],
      "module": "nodenext",
      "target": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "forceConsistentCasingInFileNames": true,
      "useDefineForClassFields": true,
      "moduleResolution": "nodenext",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "jsx": "react",
      "noImplicitAny": false
      },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }