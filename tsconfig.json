{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "module": "es2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "noImplicitAny": false
    },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}